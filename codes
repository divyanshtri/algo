//L2= a(a+b)*b.


#include <iostream> 
#include <string> 
using namespace std; 
 
void state1(string w, int i); 
void state2(string w, int i); 
void state3(string w, int i); 
void state4(string w, int i); 
 
void state1(string w, int i){ 
    cout<<"State 1"<<endl; 
    if(i==w.length()){ 
        cout<<"string is rejected"<<endl; 
        return; 
    }else{ 
        if(w[i]=='a'){ 
            state2(w, i+1); 
        }if(w[i]=='b'){ 
            state4(w, i+1); 
        } 
    } 
} 
 
void state2(string w, int i){ 
    cout<<"state 2"<<endl; 
    if(i==w.length()){ 
        cout<<"string is rejected"<<endl; 
        return; 
    }else{ 
        if(w[i]=='a'){ 
            state2(w, i+1); 
        }if(w[i]=='b'){ 
            state3(w, i+1); 
        } 
    } 
} 
 
void state3(string w, int i){ 
    cout<<"state 3"<<endl; 
    if(i==w.length()){ 
        cout<<"String is accepted"<<endl; 
        return;
    }else{ 
        if(w[i]=='a'){ 
            state2(w, i+1); 
        }if(w[i]=='b'){ 
            state3(w, i+1); 
        } 
    } 
} 
 
void state4(string w, int i){ 
    cout<<"state 4"<<endl; 
    cout<<"string is rejected"<<endl; 
 
    if(w[i]=='a' || w[i]=='b'){ 
        state4(w, i+1); 
    } 
} 
 
int main(){ 
    string w; 
    cout<<"enter the word: "<<endl; 
    cin>>w; 
    state1(w, 0); 
 
} 



// EVEN-EVEN 



#include <iostream> 
#include <string> 
using namespace std; 
 
void state1(string w, int i); 
void state2(string w, int i); 
void state3(string w, int i); 
void state4(string w, int i); 
 
void state1(string w, int i){ 
    cout<<"State 1"<<endl; 
    if(i==w.length()){ 
        cout<<"string is accepted"<<endl; 
        return; 
    }else{ 
        if(w[i]=='a'){ 
            state2(w, i+1); 
        }if(w[i]=='b'){ 
            state3(w, i+1); 
        } 
    } 
} 
 
void state2(string w, int i){ 
    cout<<"state 2"<<endl; 
    if(i==w.length()){ 
        cout<<"string is rejected"<<endl; 
        return; 
    }else{ 
        if(w[i]=='a'){ 
            state1(w, i+1); 
        }if(w[i]=='b'){ 
            state4(w, i+1); 
        } 
    } 
} 
 
void state3(string w, int i){ 
    cout<<"state 3"<<endl; 
    if(i==w.length()){ 
        cout<<"String is rejected"<<endl; 
        return; 
    }else{ 
        if(w[i]=='a'){ 
            state4(w, i+1); 
        }if(w[i]=='b'){ 
            state1(w, i+1); 
        } 
    } 
} 
 
void state4(string w, int i){ 
    cout<<"state 4"<<endl; 
    if(i==w.length()){ 
        cout<<"String is rejected"<<endl; 
        return; 
    }else{ 
        if(w[i]=='a'){ 
            state3(w, i+1); 
        }if(w[i]=='b'){ 
            state2(w, i+1); 
        } 
    } 
} 
 
int main(){ 
    string w; 
    cout<<"enter the word: "<<endl; 
    cin>>w; 
    state1(w, 0); 
 
}


// Write a program in C++ to simulate an FA that accepts  
// a. Union of the languages L1 and L2 
// b. Intersection of the languages L1 and L2  
// c. Language L1 L2 (concatenation)


#include <iostream> 
#include <string> 
using namespace std; 
 
bool FA1(string w) { 
    if (w.empty()) return false; 
    return (w.back() == 'a'); 
} 
 
bool FA2(string w) { 
    if (w.empty()) return false; 
    return (w.front() == 'b'); 
} 
 
bool UnionFA(string w) { 
    return (FA1(w) || FA2(w)); 
} 
 
bool IntersectionFA(string w) { 
    return (FA1(w) && FA2(w)); 
} 
 
bool ConcatenationFA(string w) { 
    int n = w.length(); 
    for (int k = 0; k <= n; k++) { 
        string x = w.substr(0, k);    
        string y = w.substr(k);       
        if (FA1(x) && FA2(y)) 
            return true; 
    } 
    return false; 
} 
 
int main() { 
    string w; 
    cout << "Enter a string (over {a,b}): ";
cin >> w; 
cout << "\nResult of simulation:\n"; 
cout << "L1 (ends with a): " << (FA1(w) ? "Accepted" : "Rejected") << endl; 
cout << "L2 (starts with b): " << (FA2(w) ? "Accepted" : "Rejected") << endl; 
cout << "\n(a) Union (L1 ∪ L2): "  
<< (UnionFA(w) ? "Accepted" : "Rejected") << endl; 
cout << "(b) Intersection (L1 ∩ L2): "  
<< (IntersectionFA(w) ? "Accepted" : "Rejected") << endl; 
cout << "(c) Concatenation (L1L2): "  
<< (ConcatenationFA(w) ? "Accepted" : "Rejected") << endl; 
return 0; 
} 
